<materialDesign:ColorZone
  Mode="PrimaryMid">
  <StackPanel
    Orientation="Horizontal"
    Margin="2">
    <RadioButton
      Style="{StaticResource MaterialDesignTabRadioButton}"
      Margin="4"
      IsChecked="True"
      Content="FIRST" />
    <RadioButton
      Style="{StaticResource MaterialDesignTabRadioButton}"
      Margin="4"
      IsChecked="False"
      Content="SECOND" />
    <RadioButton
      Style="{StaticResource MaterialDesignTabRadioButton}"
      Margin="4"
      IsChecked="False"
      IsEnabled="False"
      Content="THIRD" />
  </StackPanel>
</materialDesign:ColorZone>
